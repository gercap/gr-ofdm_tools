<?xml version="1.0"?>
<block>
  <name>ascii_plot</name>
  <key>ofdm_tools_ascii_plot</key>
  <category>ofdm_tools</category>
  <import>import ofdm_tools</import>
  <make>ofdm_tools.ascii_plot(
  fft_len=$fft_len,
  method=$method,
  samp_rate=$samp_rate, 
  fc=$fc, 
  average=$average, 
  refresh_rate=$refresh_rate,
  length=$length,
  height=$height
  )</make>
<callback>set_fft_len($fft_len)</callback>
<callback>set_samp_rate($samp_rate)</callback>
<callback>set_fc($fc)</callback>
<callback>set_average($average)</callback>
<callback>set_refresh_rate($refresh_rate)</callback>
<callback>set_length($length)</callback>
<callback>set_height($height)</callback>

	<param>
		<name>Tune Freq</name>
		<key>fc</key>
		<value>0</value>
		<type>float</type>
	</param>
	<param>
		<name>FFT Length</name>
		<key>fft_len</key>
		<value>1024</value>
		<type>int</type>
	</param>
	<param>
		<name>PDS Method</name>
		<key>method</key>
		<type>enum</type>
	<option>
		<name>Welch</name>
		<key>'welch'</key>
	</option>
	<option>
		<name>FFT</name>
		<key>'fft'</key>
	</option>
	</param>
	<param>
		<name>Sample Rate</name>
		<key>samp_rate</key>
		<value>samp_rate</value>
		<type>int</type>
	</param>
	<param>
		<name>Average</name>
		<key>average</key>
		<value>0</value>
		<type>int</type>
	</param>
	<param>
		<name>Refresh Rate</name>
		<key>refresh_rate</key>
		<value>0.5</value>
		<type>float</type>
	</param>
	<param>
		<name>Length</name>
		<key>length</key>
		<value>80</value>
		<type>int</type>
	</param>
	<param>
		<name>Height</name>
		<key>height</key>
		<value>30</value>
		<type>int</type>
	</param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
</block>

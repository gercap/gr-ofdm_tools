<?xml version="1.0"?>
<block>
  <name>remote_client</name>
  <key>ofdm_tools_remote_client</key>
  <category>[ofdm_tools]</category>
  <import>import ofdm_tools</import>
  <make>ofdm_tools.remote_client(
  fft_len=$fft_len,
  sample_rate=$sample_rate, 
  tune_freq=$tune_freq, 
  width=$width,
  height=$height,
  )</make>
<callback>set_sample_rate($sample_rate)</callback>
<callback>set_tune_freq($tune_freq)</callback>
<callback>set_width($width)</callback>
<callback>set_height($height)</callback>

  <param>
    <name>Tune Freq</name>
    <key>tune_freq</key>
    <value>tune_freq</value>
    <type>float</type>
  </param>
  <param>
    <name>FFT width</name>
    <key>fft_len</key>
    <value>fft_len</value>
    <type>int</type>
  </param>

  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <value>samp_rate</value>
    <type>int</type>
  </param>

  <param>
    <name>Width</name>
    <key>width</key>
    <value>80</value>
    <type>int</type>
  </param>
  <param>
    <name>Height</name>
    <key>height</key>
    <value>30</value>
    <type>int</type>
  </param>

  <sink>
    <name>pkt_in</name>
    <type>message</type>
  </sink>

</block>

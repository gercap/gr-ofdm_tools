<?xml version="1.0"?>
<block>
  <name>Remote Spectrum Plot</name>
  <key>ofdm_tools_remote_client_qt</key>
  <category>ofdm_tools</category>
  <import>import ofdm_tools</import>
  <make>#set $win = 'self._%s_win'%$id
ofdm_tools.remote_client_qt($tune_freq,
$samp_rate,
$l,
$axes)
self._$(id)_win = self.$(id);
$(gui_hint()($win))

</make>
<callback>set_tune_freq($tune_freq)</callback>
<callback>set_sample_rate($samp_rate)</callback>
<callback>set_show_axes($axes)</callback>
  <param>
    <name>GUI Hint</name>
    <key>gui_hint</key>
    <value></value>
    <type>gui_hint</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Label</name>
    <key>l</key>
    <value></value>
    <type>string</type>
  </param>
  <param>
    <name>Tune Freq</name>
    <key>tune_freq</key>
    <value></value>
    <type>float</type>
  </param>
    <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value></value>
    <type>float</type>
  </param>
  <param>
    <name>Show Axes</name>
    <key>axes</key>
    <value></value>
    <type>string</type>
  </param>
  <sink>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
</block>
<?xml version="1.0"?>
<block>
  <name>Remote Spectrum Plot</name>
  <key>ofdm_tools_remote_client_qt</key>
  <category>ofdm_tools</category>
  <import>import ofdm_tools</import>
  <make>#set $win = 'self._%s_win'%$id
ofdm_tools.remote_client_qt($l)
self._$(id)_win = self.$(id);
$(gui_hint()($win))
</make>

  <param>
    <name>GUI Hint</name>
    <key>gui_hint</key>
    <value></value>
    <type>gui_hint</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Label</name>
    <key>l</key>
    <value></value>
    <type>string</type>
  </param>

  <sink>
    <name>pdus</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
</block>
<?xml version="1.0"?>
<block>
  <name>Spectrum Sensor (v2)</name>
  <key>ofdm_tools_spectrum_sensor_v2</key>
  <category>ofdm_tools</category>
  <import>import ofdm_tools</import>
  <make>ofdm_tools.spectrum_sensor_v2(
fft_len=$fft_len,
sens_per_sec=$sens_per_sec,
sample_rate=$sample_rate,
channel_space=$channel_space,
search_bw=$search_bw,
thr_leveler=$thr_leveler,
tune_freq=$tune_freq,
alpha_avg=$alpha_avg,
test_duration=$test_duration,
period=$period,
trunc_band=$trunc_band,
verbose=$verbose,
psd=$psd,
waterfall=$waterfall,
display=$display,
subject_channels=$subject_channels
)</make>
<callback>set_tune_freq($tune_freq)</callback>
	<param>
		<name>Scanner FFT/Block length</name>
		<key>fft_len</key>
		<value>1024</value>
		<type>int</type>
	</param>
	<param>
		<name>Scanner Rate (sens per sec)</name>
		<key>sens_per_sec</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Sample Rate</name>
		<key>sample_rate</key>
		<value>samp_rate</value>
		<type>int</type>
	</param>
	<param>
		<name>Trunc Band</name>
		<key>trunc_band</key>
		<value>trunc_band</value>
		<type>int</type>
	</param>
	<param>
		<name>Channel Spacing</name>
		<key>channel_space</key>
		<value>100e3</value>
		<type>float</type>
	</param>
	<param>
		<name>Channel BW</name>
		<key>search_bw</key>
		<value>80e3</value>
		<type>float</type>
	</param>
	<param>
		<name>Noise Leveler</name>
		<key>thr_leveler</key>
		<value>10</value>
		<type>float</type>
	</param>

	<param>
		<name>Tune Freq</name>
		<key>tune_freq</key>
		<value>0</value>
		<type>float</type>
	</param>

	<param>
		<name>Alpha Avg Noise</name>
		<key>alpha_avg</key>
		<value>0.9</value>
		<type>float</type>
	</param>

	<param>
		<name>Test Durat (s)</name>
		<key>test_duration</key>
		<value>duration</value>
		<type>int</type>
	</param>

	<param>
		<name>Periodic logs (s)</name>
		<key>period</key>
		<value>3600</value>
		<type>int</type>
	</param>

	<param>
		<name>Verbose</name>
		<key>verbose</key>
		<type>enum</type>
	<option>
		<name>No</name>
		<key>False</key>
	</option>
	<option>
		<name>Yes</name>
		<key>True</key>
	</option>
	</param>

	<param>
		<name>Log PSD?</name>
		<key>psd</key>
		<type>enum</type>
	<option>
		<name>No</name>
		<key>False</key>
	</option>
	<option>
		<name>Yes</name>
		<key>True</key>
	</option>
	</param>

	<param>
		<name>Log Waterfall?</name>
		<key>waterfall</key>
		<type>enum</type>
	<option>
		<name>No</name>
		<key>False</key>
	</option>
	<option>
		<name>Yes</name>
		<key>True</key>
	</option>
	</param>

	<param>
		<name>Output realtime data?</name>
		<key>display</key>
		<type>enum</type>
	<option>
		<name>No</name>
		<key>False</key>
	</option>
	<option>
		<name>Graph</name>
		<key>'g'</key>
	</option>
	<option>
		<name>Table</name>
		<key>'t'</key>
	</option>
	<option>
		<name>Out Top4 Only</name>
		<key>'o'</key>
	</option>
	</param>

	<param>
		<name>Table Subject Channels</name>
		<key>subject_channels</key>
		<value>[]</value>
		<type>real_vector</type>
	</param>

	<sink>
		<name>in</name>
		<type>complex</type>
		<vlen>1</vlen>
	</sink>

  <source>
    <name>freq_out_0</name>
    <type>message</type>
    <optional>False</optional>
  </source>

  <source>
    <name>freq_out_1</name>
    <type>message</type>
    <optional>False</optional>
  </source>
  
    <source>
    <name>freq_out_2</name>
    <type>message</type>
    <optional>False</optional>
  </source>

  <source>
    <name>freq_out_3</name>
    <type>message</type>
    <optional>False</optional>
  </source>

  <doc>
Spectrum sensor w/ statistics and logs
Optionally outputs top 4 channels (deviation from tune frequency)
</doc>


</block>
